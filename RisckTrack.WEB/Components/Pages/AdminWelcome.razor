@page "/admin-welcome"
@using RisckTrack.WEB.Services
@inject UserSessionService Session
@inject NavigationManager Navigation
@rendermode InteractiveServer

<div class="admin-wrapper">
    <div class="admin-card">
        <h1 class="hero-title">Bienvenido, Administrador</h1>
        <p class="hero-subtitle">Tienes acceso completo al sistema. Desde aquí puedes gestionar usuarios y compañías.</p>

        <div class="button-group">
            <button class="cta-button green-button" @onclick="ShowUsers">Ver Usuarios</button>
            <button class="cta-button green-button" @onclick="ShowCompanies">Ver Compañías</button>
        </div>

        <div class="section-card">
            @if (showUsers)
            {
                <Users />
            }
            @if (showCompanies)
            {
                <Companies />
            }
        </div>
    </div>
</div>


@code {
    private bool showUsers = false;
    private bool showCompanies = false;

    private void ShowUsers()
    {
        showUsers = true;
        showCompanies = false;
    }

    private void ShowCompanies()
    {
        showCompanies = true;
        showUsers = false;
    }
}
