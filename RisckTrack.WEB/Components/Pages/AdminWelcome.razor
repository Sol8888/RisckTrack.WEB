@page "/admin-welcome"
@using RisckTrack.WEB.Services
@inject UserSessionService Session
@inject NavigationManager Navigation
@rendermode InteractiveServer

<div class="admin-wrapper">
    <div class="admin-card">
        <h1 class="hero-title">Bienvenido, Administrador</h1>
        <p class="hero-subtitle">Tienes acceso completo al sistema. Desde aquí puedes gestionar usuarios y compañías.</p>

        <div class="button-group">
            <button class="cta-button green-button" @onclick="ShowUsers">Ver Usuarios</button>
       
        </div>

        <div class="section-card">
            @if (showUsers)
            {
                <Users />
            }
            
        </div>
    </div>
</div>


@code {
    private bool showUsers = false;
    

    private void ShowUsers()
    {
        showUsers = true;
        
    }

    
}
